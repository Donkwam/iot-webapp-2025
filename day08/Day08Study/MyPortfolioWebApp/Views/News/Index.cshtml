@model IEnumerable<MyPortfolioWebApp.Models.News>

@{
    // ViewData["Title"] = "Index";
}

<partial name="_Notification"/>

@if (TempData["success"] !=null) {
    <h3 style="color:limegreen">@TempData</h3>
}

<section id="news" class="section">
    <div class="contact section-title" data-aos="fade-up">
        <h2>News</h2>
        <p>Lorem ipsum dalat sit amet.</p>
    </div>
    <div class="container" data-aos="fade-up" data-aos-daley="100">
        <p>
            <a asp-controller="News" asp-action="Create"
                class="btn btn-sm btn-succese"
                style="btn btn-sm btn-success btn-kelly">Create</a>
        </p>
        <table class="board-table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <th>
                         @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PostDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ReadCount)
                    </th>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model) {
            <tr>
                <td class="content-center">
                    @Html.DisplayFor(modelItem => item.Writer)
                </td>
                    <td class="content-center">
                    <a asp-action="Details" asp-route-id="@item.Id"> @Html.DisplayFor(modelItem => item.Title) </a>
                </td>
                    <td class="content-center">
                     @Html.DisplayFor(modelItem => item.Description)
                </td> 
                    <td class="content-center">
                    @Html.DisplayFor(modelItem => item.PostDate)
                </td>
                    <td class="content-center">
                    @Html.DisplayFor(modelItem => item.ReadCount)
                </td>
            </tr>
        }
            </tbody>
        </table>
    </div>
</section>